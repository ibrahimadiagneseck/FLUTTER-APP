rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
  }

  match /databases/{database}/documents {
      // Règles pour toute la base de données
      match /commons/{document=**} {
        allow read, write: if request.auth != null; // Permet l'accès aux utilisateurs authentifiés
      }
    }
}